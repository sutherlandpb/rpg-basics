            <string>///control menu
if (alarm[0] &lt;= 0) {
    if (obj_input.down_key || obj_input.yaxis &gt; .5) {
        if (menu_index &lt; array_length_1d(option) -1) {
            menu_index++;
        } else {
            menu_index = 0;
        }
        alarm[0] = room_speed / 3;
    }
    if (obj_input.up_key || obj_input.yaxis &lt; -.5) {
       if (menu_index &gt; 0) {
            menu_index--;
        } else {
            menu_index = array_length_1d(option) - 1;
        }
        alarm[0] = room_speed / 3;
    }
    
    if(obj_input.dash_key) {
        obj_input.dash_key = false;
        switch (menu_index) {
            case 0: //return
                obj_player_stats.room_start_action = RETURN;
                obj_player_stats.has_weapon[WEAPON_SWORD] = true;
                obj_player_stats.has_weapon[WEAPON_AXE] = false;
                obj_player_stats.has_weapon[WEAPON_BONE] = false;
                obj_player_stats.has_weapon[WEAPON_RAINBOW] = false;
                obj_player_stats.hp = obj_player_stats.maxhp div 2;
                room_goto(rm_one);
                break;
            case 1: //restart
                game_restart();
                break;    
            case 2: //quit
                game_end();
                break;
            default: 
                break;
        }
        alarm[0] = room_speed / 3;
    }
}
</string>
